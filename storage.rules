rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Content files - signed URLs only (handled server-side)
    match /content/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Custom videos - signed URLs only
    match /custom_videos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

